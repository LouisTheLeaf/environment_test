<p id="notice"><%= notice %></p>

<h2>Delete Book</h2>
<%= form_for(@book, :method=> 'delete') do |f| %>
  <p>
    <strong>Title:</strong>
    <%= @book.title %>
    <br>
    <strong>Author:</strong>
    <%= @book.author %>
    <br>
    <strong>Price: $</strong>
    <%= @book.price %>
    <br>
    <strong>Publish Date:</strong>
    <%= @book.published_date %>
  </p>

  <div class="actions">
    <%= f.submit("Delete Book") %>
  </div>
<% end %>

<%= link_to 'Back', books_path %>
